<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:fontFamily="@font/poppins_family"
    android:padding="24dp"
    android:background="#8DBCC7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!--Titulo de la app-->
    <TextView
        android:text="App de Notas"
        android:fontFamily="@font/poppins_family"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!--Card Principal-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="12dp"
        android:layout_margin="16dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!--Titulo en la card-->
            <TextView
                android:text="Mis notas"
                android:fontFamily="@font/poppins_family"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <!-- Buscador -->
                <include
                    layout="@layout/toolbar_busqueda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>




            </LinearLayout>

            <!-- Card de lista de notas-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                card_view:cardCornerRadius="16dp"
                android:layout_margin="2dp"
                android:backgroundTint="#EEEEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvSinResultados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No hay resultados"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:gravity="center"
                        android:visibility="gone"
                        android:padding="8dp"/>

                    <!--Card de notas-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerTareas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_family"
                        android:paddingTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- BotÃ³n flotante para nueva nota -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabAgregarNota"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:text="+"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"
            app:backgroundTint="#093FB4"
            app:elevation="6dp" />

    </LinearLayout>

</LinearLayout>